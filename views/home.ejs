<% layout('layouts/boilerplate')%>
<section class="mx-auto container mt-20">
  <div
    class="bg-[url('/images/banner.png')] bg-cover bg-top h-96 w-full mt-7 rounded-3xl shadow-emerald-500 flex justify-center flex-col"
  >
    <div class="text-4xl font-bold text-white ml-40">Welcome to Pawmigo!</div>
    <div class="ml-40 mt-3 text-white font-semibold text-xl">
      Find your furry friend for life. üê∂
    </div>
    <a
      href="#dog"
      class="w-fit h-fit px-4 py-2 mx-40 mt-4 bg-light cursor-pointer hover:bg-slate-300 rounded-md font-semibold text-dark"
    >
      Explore
    </a>
  </div>
  <div>
    <div>
      <div class="flex mt-10 space-x-3">
        <input
          class="loc w-full h-14 rounded-lg text-xl pl-3"
          type="text"
          placeholder="Enter the location (eg: Puttur)"
          name="loc"
        />
        <select class="petSelect bg-white w-32 text-xl rounded-lg text-center">
          <option value="pet">Pet</option>
          <option value="cat">Cat</option>
          <option value="dog">Dog</option>
        </select>
        <select
          class="breedSelect bg-white w-32 text-xl rounded-lg text-center"
        >
          <option value="breed">Breed</option>
        </select>
        <a
          onclick="handleClick()"
          class="w-fit px-6 py-3 mx-40 bg-primary text-white cursor-pointer hover:bg-primary_light rounded-md font-semibold text-lg"
        >
          Search
        </a>
      </div>
    </div>

    <div
      class="flex items-center justify-evenly bg-gradient-to-r to-[#77b6a7] from-primary_light rounded-full py-9 mt-10 mb-10 flex-wrap"
    >
      <a
        href="#dog"
        class="h-32 w-40 bg-white hover:bg-gray-200 cursor-pointer shadow-lg rounded-full flex justify-center items-center"
      >
        <div class="">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-dog mx-auto"
            width="69"
            height="69"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#2c3e50"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M11 5h2" />
            <path
              d="M19 12c-.667 5.333 -2.333 8 -5 8h-4c-2.667 0 -4.333 -2.667 -5 -8"
            />
            <path d="M11 16c0 .667 .333 1 1 1s1 -.333 1 -1h-2z" />
            <path d="M12 18v2" />
            <path d="M10 11v.01" />
            <path d="M14 11v.01" />
            <path
              d="M5 4l6 .97l-6.238 6.688a1.021 1.021 0 0 1 -1.41 .111a.953 .953 0 0 1 -.327 -.954l1.975 -6.815z"
            />
            <path
              d="M19 4l-6 .97l6.238 6.688c.358 .408 .989 .458 1.41 .111a.953 .953 0 0 0 .327 -.954l-1.975 -6.815z"
            />
          </svg>
          <p class="text-center text-xl font-bold text-dark">Dogs</p>
        </div>
      </a>

      <a
        href="#cat"
        class="h-32 w-40 bg-white shadow-lg rounded-full flex justify-center items-center hover:bg-gray-200 cursor-pointer"
      >
        <div class="">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-cat mx-auto"
            width="69"
            height="69"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#2c3e50"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path
              d="M20 3v10a8 8 0 1 1 -16 0v-10l3.432 3.432a7.963 7.963 0 0 1 4.568 -1.432c1.769 0 3.403 .574 4.728 1.546l3.272 -3.546z"
            />
            <path d="M2 16h5l-4 4" />
            <path d="M22 16h-5l4 4" />
            <path d="M12 16m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
            <path d="M9 11v.01" />
            <path d="M15 11v.01" />
          </svg>
          <p class="text-center text-xl font-bold text-dark">Cats</p>
        </div>
      </a>
      <a
        href="#other"
        class="h-36 w-40 bg-white shadow-lg rounded-full flex justify-center items-center hover:bg-gray-200 cursor-pointer"
      >
        <div class="">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-inner-shadow-top-left mx-auto"
            width="69"
            height="69"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#2c3e50"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M12 3a9 9 0 1 1 0 18a9 9 0 0 1 0 -18z" />
            <path d="M6 12a6 6 0 0 1 6 -6" />
          </svg>
          <p class="text-center text-xl font-bold text-dark">Others</p>
        </div>
      </a>
      <a
        href="#other"
        class="h-36 w-40 bg-white shadow-lg rounded-full flex justify-center items-center hover:bg-gray-200 cursor-pointer"
      >
        <div class="">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="mx-auto icon icon-tabler icon-tabler-home-heart"
            width="69"
            height="69"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#2c3e50"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M21 12l-9 -9l-9 9h2v7a2 2 0 0 0 2 2h6" />
            <path d="M9 21v-6a2 2 0 0 1 2 -2h2c.39 0 .754 .112 1.061 .304" />
            <path
              d="M19 21.5l2.518 -2.58a1.74 1.74 0 0 0 0 -2.413a1.627 1.627 0 0 0 -2.346 0l-.168 .172l-.168 -.172a1.627 1.627 0 0 0 -2.346 0a1.74 1.74 0 0 0 0 2.412l2.51 2.59z"
            />
          </svg>
          <p class="text-center text-xl font-bold text-dark">Shelters</p>
        </div>
      </a>
    </div>
    <div class="">
      <div
        class="mb-4 shadow-sm py-6 bg-white rounded-full flex w-full justify-between"
      >
        <div class="text-3xl text-center text-primary font-bold ml-16">
          Dogs
        </div>
        <a
          href="/search/dog"
          class="self-center mr-10 bg-primary_light px-4 py-2 text-white rounded-full font-bold"
          >View more</a
        >
      </div>
      <div
        id="dog"
        class="rounded-3xl flex w-full bg-white shadow-md items-center flex-wrap gap-y-7 py-8 px-6 justify-start"
      >
        <% for (let pet of pets) {%> <% if (pet.pet_type === "dog") { %>
        <div
          onclick="window.location.href = `pets/<%=pet.pet_id%>`"
          class="h-80 flex-1 bg-light shadow-md flex rounded-md flex-col items-center mr-2 ml-2 cursor-pointer hover:shadow-lg hover:shadow-primary_light max-w-[22rem]"
        >
          <div id="image" class="h-56 w-full min-w-72 bg-white rounded-t-md">
            <img
              src="<%= pet.images %>"
              class="object-cover h-full w-full rounded-t-md shadow-sm"
            />
          </div>

          <div id="info flex justify-center items-center">
            <p class="text-lg font-bold text-center mt-2 text-primary">
              <%= pet.pet_name %>
            </p>
            <p class="text-center"><%= pet.breed %></p>
            <p class="text-center italic">Bangalore</p>
          </div>
        </div>
        <% } %> <% } %>
      </div>
      <div
        class="mb-4 shadow-sm py-6 bg-white rounded-full flex w-full justify-between mt-14"
      >
        <div class="text-3xl text-center text-primary font-bold ml-16">
          Cats
        </div>
        <a
          href="/search/cat"
          class="self-center mr-10 bg-primary_light px-4 py-2 text-white rounded-full font-bold"
          >View more</a
        >
      </div>
      <div
        id="cat"
        class="rounded-3xl flex w-full bg-white shadow-md items-center flex-wrap gap-y-7 py-8 px-6 justify-start"
      >
        <% for (let pet of pets) {%> <% if (pet.pet_type === "cat") { %>
        <div
          onclick="window.location.href = `pets/<%=pet.pet_id%>`"
          class="h-80 flex-1 bg-light shadow-md flex rounded-md flex-col items-center mr-2 ml-2 cursor-pointer hover:shadow-lg hover:shadow-primary_light max-w-[22rem]"
        >
          <div id="image" class="h-56 w-full min-w-72 bg-white rounded-t-md">
            <img
              src="<%= pet.images %>"
              class="object-cover h-full w-full rounded-t-md shadow-sm"
            />
          </div>

          <div id="info flex justify-center items-center">
            <p class="text-lg font-bold text-center mt-2 text-primary">
              <%= pet.pet_name %>
            </p>
            <p class="text-center"><%= pet.breed %></p>
            <p class="text-center italic">Bangalore</p>
          </div>
        </div>
        <% } %> <% } %>
      </div>
      <div
        class="mb-4 shadow-sm py-6 bg-white rounded-full flex w-full justify-between mt-14"
      >
        <div class="text-3xl text-center text-primary font-bold ml-16">
          Others
        </div>
        <a
          href="/search/other"
          class="self-center mr-10 bg-primary_light px-4 py-2 text-white rounded-full font-bold"
          >View more</a
        >
      </div>
      <div
        id="other"
        class="rounded-3xl flex w-full bg-white shadow-md items-center flex-wrap gap-y-7 py-8 px-6 justify-center"
      >
        <% for (let pet of pets) {%> <% if (pet.pet_type === "other") { %>
        <div
          onclick="window.location.href = `pets/<%=pet.pet_id%>`"
          class="h-80 flex-1 bg-light shadow-md flex rounded-md flex-col items-center mr-2 ml-2 cursor-pointer hover:shadow-lg hover:shadow-primary_light max-w-[22rem]"
        >
          <div id="image" class="h-56 w-full min-w-72 bg-white rounded-t-md">
            <img
              src="<%= pet.images %>"
              class="object-cover h-full w-full rounded-t-md shadow-sm"
            />
          </div>

          <div id="info flex justify-center items-center">
            <p class="text-lg font-bold text-center mt-2 text-primary">
              <%= pet.pet_name %>
            </p>
            <p class="text-center"><%= pet.breed %></p>
            <p class="text-center italic">Bangalore</p>
          </div>
        </div>
        <% } %> <% } %>
      </div>
      <div
        class="mb-4 shadow-sm py-6 bg-white rounded-full flex w-full justify-between mt-14"
      >
        <div class="text-3xl text-center text-primary font-bold ml-16">
          Shelters
        </div>
        <a
          href="/search/shelter"
          class="self-center mr-10 bg-primary_light px-4 py-2 text-white rounded-full font-bold"
          >View more</a
        >
      </div>
      <div
        id="shelter"
        class="rounded-3xl flex w-full bg-white shadow-md items-center flex-wrap gap-y-7 py-8 px-6 justify-center"
      >
        <% for (let shelter of shelters) {%>
        <div
          onclick="window.location.href = `shelters/<%=shelter.shelter_id%>`"
          class="flex-1 py-6 bg-light shadow-md flex rounded-md flex-col items-center mr-2 ml-2 cursor-pointer hover:shadow-lg hover:shadow-primary_light"
        >
          <div id="info flex justify-center items-center">
            <p class="text-2xl font-bold text-center mt-2 text-primary">
              <%= shelter.shelter_name %>
            </p>
            <p class="text-center text-lg"><%= shelter.city %></p>
            <p class="text-center italic"><%= shelter.state %></p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <div
      class="rounded-3xl flex w-full bg-white shadow-md mb-10 flex-col mt-14"
    >
      <p class="text-3xl text-primary font-bold ml-10 mt-5">Contact Us</p>
      <div class="flex flex-col ml-10 mt-6 mr-10">
        <div class="flex justify-evenly space-x-9 items-center">
          <input
            type="email"
            placeholder="Enter your first name"
            class="w-full h-12 text-xl bg-light px-3 rounded-md"
          />
          <input
            type="text"
            placeholder="Enter your last name"
            class="w-full h-12 text-xl bg-light px-3 rounded-md"
          />
        </div>
        <div class="flex justify-evenly space-x-9 items-center mt-4">
          <input
            type="email"
            placeholder="Enter your email"
            class="w-full h-12 text-xl bg-light px-3 rounded-md"
          />
          <input
            type="text"
            placeholder="Enter your city"
            class="w-full h-12 text-xl bg-light px-3 rounded-md"
          />
        </div>
        <textarea
          class="text-xl bg-light px-3 rounded-md mt-4 py-2"
          rows="5"
          cols="155"
          placeholder="Enter your comments"
        ></textarea>
      </div>
      <div class="self-center">
        <button
          class="w-fit h-fit px-5 py-2 mx-40 mt-6 mb-6 bg-primary cursor-pointer hover:bg-primary_light rounded-xl font-semibold text-white text-lg"
        >
          Submit
        </button>
      </div>
    </div>
  </div>
</section>
